---
import BaseLayout from "@components/base/BaseLayout.astro";
import FeaturesShowcase from "@components/features/FeaturesShowcase.tsx";

const title = "Features - Glow";
const description = "Discover all the powerful features that make Glow the ultimate menu bar manager for macOS.";
---

<BaseLayout title={title} description={description}>
  <div class="features-page">
    <!-- Interactive Features Showcase -->
    <section class="features-showcase-section">
      <div class="container">
        <FeaturesShowcase client:load />
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .features-page {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 0.5rem 0;
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Features Showcase Section */
  .features-showcase-section {
    padding: 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .features-page {
      padding: 0.5rem 0;
    }

    .container {
      padding: 0 1.25rem;
    }
  }
</style>
