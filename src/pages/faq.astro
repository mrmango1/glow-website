---
import BaseLayout from "@components/base/BaseLayout.astro";
import FAQShowcase from "@components/faq/FAQShowcase.tsx";

const title = "FAQ - Glow";
const description = "Frequently asked questions about Glow, the menu bar manager for macOS.";
---

<BaseLayout title={title} description={description}>
  <div class="faq-page">
    <section class="faq-content">
      <div class="container">
        <FAQShowcase client:load />
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .faq-page {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem 0;
  }

  .container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .faq-content {
    padding: 0;
  }

  @media (max-width: 768px) {
    .faq-page {
      padding: 1rem 0;
    }

    .container {
      padding: 0 1.25rem;
    }
  }
</style>
